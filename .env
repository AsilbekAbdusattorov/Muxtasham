import React, { useState } from "react";
import axios from "axios";

const rooms = [
  { id: 1, name: "Xona 1", capacity: 2, booked: {} },
  { id: 2, name: "Xona 2", capacity: 3, booked: {} },
  { id: 3, name: "Xona 3", capacity: 1, booked: {} },
  { id: 4, name: "Xona 4", capacity: 4, booked: {} },
  { id: 5, name: "Xona 5", capacity: 2, booked: {} },
  { id: 6, name: "Xona 6", capacity: 2, booked: {} },
  { id: 7, name: "Xona 7", capacity: 3, booked: {} },
  { id: 8, name: "Xona 8", capacity: 1, booked: {} },
  { id: 9, name: "Xona 9", capacity: 2, booked: {} },
  { id: 10, name: "Xona 10", capacity: 3, booked: {} },
  { id: 11, name: "Xona 11", capacity: 3, booked: {} },
  { id: 12, name: "Xona 12", capacity: 3, booked: {} },
  { id: 13, name: "Xona 13", capacity: 3, booked: {} },
  { id: 14, name: "Xona 14", capacity: 3, booked: {} },
  { id: 15, name: "Xona 15", capacity: 3, booked: {} },
];

const correctPassword = "123456";

const Home = () => {
  const [selectedRoom, setSelectedRoom] = useState(null);
  const [form, setForm] = useState({ name: "", phone: "", date: "", shift: "kun" });
  const [password, setPassword] = useState("");
  const [isAuthenticated, setIsAuthenticated] = useState(false);

  const handlePasswordSubmit = () => {
    if (password === correctPassword) {
      setIsAuthenticated(true);
    } else {
      alert("Noto'g'ri parol!");
    }
  };

  const handleBookRoom = async (roomId) => {
    if (!form.name || !form.phone || !form.date || !form.shift) {
      alert("Iltimos, barcha maydonlarni to'ldiring!");
      return;
    }

    const bookingData = {
      roomId,
      date: form.date,
      shift: form.shift,
      name: form.name,
      phone: form.phone,
    };

    try {
      const response = await axios.post("http://localhost:5000/book-room", bookingData);
      if (response.data.success) {
        alert("Xona muvaffaqiyatli band qilindi!");
        setSelectedRoom(null);
      }
    } catch (error) {
      alert("Xatolik yuz berdi, iltimos qayta urinib ko‘ring!");
      console.error("Xona band qilishda xatolik:", error);
    }
  };

  return (
    <div className="p-4 sm:p-6 lg:p-8 bg-gray-100 min-h-screen">
      {!isAuthenticated ? (
        <div className="flex justify-center items-center min-h-screen">
          <div className="bg-white p-6 rounded-lg shadow-lg w-96 text-black">
            <h2 className="text-xl font-bold mb-4 text-center">Sahifaga kirish</h2>
            <input
              type="password"
              placeholder="6 raqamli parol"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              className="border p-2 w-full mb-4"
            />
            <button
              className="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded w-full"
              onClick={handlePasswordSubmit}
            >
              Kirish
            </button>
          </div>
        </div>
      ) : (
        <>
          <h1 className="text-2xl font-bold mb-4 text-center">Xonalar Roʻyxati</h1>
          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {rooms.map((room) => (
              <div
                key={room.id}
                className="p-6 border rounded-lg bg-green-200 cursor-pointer hover:bg-green-300"
                onClick={() => setSelectedRoom(room.id)}
              >
                <h2 className="text-lg font-semibold">{room.name}</h2>
                <p className="text-sm">Kapasite: {room.capacity} kishiga</p>
              </div>
            ))}
          </div>

          {selectedRoom && (
            <div className="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center text-black">
              <div className="bg-white p-6 rounded-lg shadow-lg w-full sm:w-96">
                <h2 className="text-xl font-bold mb-4 text-center">Xonani Band Qilish</h2>
                <input
                  type="text"
                  placeholder="Ism Familiya"
                  value={form.name}
                  onChange={(e) => setForm({ ...form, name: e.target.value })}
                  className="border p-2 w-full mb-2"
                />
                <input
                  type="text"
                  placeholder="Telefon raqam"
                  value={form.phone}
                  onChange={(e) => setForm({ ...form, phone: e.target.value })}
                  className="border p-2 w-full mb-2"
                />
                <input
                  type="date"
                  value={form.date}
                  onChange={(e) => setForm({ ...form, date: e.target.value })}
                  className="border p-2 w-full mb-2"
                />
                <button
                  className="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded w-full"
                  onClick={() => handleBookRoom(selectedRoom)}
                >
                  Band qilish
                </button>
              </div>
            </div>
          )}
        </>
      )}
    </div>
  );
};

export default Home;


